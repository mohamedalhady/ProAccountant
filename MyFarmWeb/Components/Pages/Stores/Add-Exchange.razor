    {

        await base.OnInitializedAsync();

        if (!await service.IsAuth())
        {
            nv.NavigateTo("/Account/Login");
            return;
        }
        UserId = await service.GetUserId();
        if (Id > 0)
        {
            //  salesitemToSave = unitofwork.ExchangeDetails.GetDataWithMultiIncludeById(Id, UserId).ToList();
            exchangeheader = salesitemToSave[0].ExchangeHeader;
