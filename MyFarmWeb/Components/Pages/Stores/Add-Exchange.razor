    async Task InsertRow()
    {
        if (editMode == DataGridEditMode.Single)
        {
            Reset();
        }

        var order = new ExchangeDetails();
        ordersToInsert.Add(order);

        await ordersGrid.InsertRow(order);
        //  await InvokeAsync(StateHasChanged);
        await FireEvents();

    }
