    }

    .date-item-card {
        background: white;
        border-radius: 12px;
        box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
        border: none;
    }

    /* بطاقات المعلومات */
    .info-card {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        border-left: 4px solid #667eea;
        border-radius: 12px;
        transition: all 0.3s ease;
        border-top: none;
        border-right: none;
        border-bottom: none;
    }

    .info-card:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
    }

    /* بطاقة الإجراءات */
    .actions-card {
        background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
        border-radius: 20px;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
        border: none;
    }

    /* بطاقة المساعدة */
    .help-card {
        border-radius: 20px;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
        border: none;
        background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
    }

    .sticky-card {
        position: sticky;
        top: 20px;
    }

    .help-item-card {
        background: #f8f9fa;
        border-radius: 10px;
        border: none;
        transition: all 0.3s ease;
    }

    .help-item-card:hover {
        background: #e9ecef;
        transform: translateX(-5px);
    }

    /* بطاقات الإحصائيات المصغرة */
    .stat-mini-card {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        border-radius: 10px;
        border: none;
        transition: all 0.3s ease;
