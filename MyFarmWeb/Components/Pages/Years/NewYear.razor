@page "/add-year"
@using Radzen.Blazor
@rendermode InteractiveServer
<PageTitle>تصميم شاشة إضافة السنة المالية - Radzen</PageTitle>

<div class="year-form-radzen">
    <!-- رأس الصفحة -->
    <RadzenCard class="page-header-card">
        <RadzenRow AlignItems="AlignItems.Center" JustifyContent="JustifyContent.SpaceBetween">
            <RadzenColumn Size="8">
                <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="1rem">
                    <RadzenIcon Icon="event" Style="font-size: 48px; color: #667eea;" />
                    <RadzenStack Gap="0.5rem">
                        <RadzenText TextStyle="TextStyle.H3" Style="color: white; margin: 0;">
                            إضافة سنة مالية جديدة
                        </RadzenText>
                        <RadzenText TextStyle="TextStyle.Body1" Style="color: rgba(255,255,255,0.9); margin: 0;">
                            أدخل بيانات السنة المالية الجديدة للنظام
                        </RadzenText>
                    </RadzenStack>
                </RadzenStack>
            </RadzenColumn>
            <RadzenColumn Size="4">
                <RadzenStack Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.End" Gap="0.5rem">
                    <RadzenButton Text="العودة للقائمة" 
                                 Icon="arrow_back" 
                                 ButtonStyle="ButtonStyle.Light" 
                                 Size="ButtonSize.Medium" />
                    <RadzenButton Text="المساعدة" 
                                 Icon="help" 
                                 ButtonStyle="ButtonStyle.Secondary" 
                                 Size="ButtonSize.Medium" />
                </RadzenStack>
            </RadzenColumn>
        </RadzenRow>
    </RadzenCard>

    <!-- شريط التقدم -->
    <RadzenCard class="progress-card">
        <RadzenSteps>
            <RadzenStepsItem Text="البيانات الأساسية" Icon="info" />
            <RadzenStepsItem Text="التواريخ" Icon="date_range" />
            <RadzenStepsItem Text="المراجعة والحفظ" Icon="save" />
        </RadzenSteps>
    </RadzenCard>

    <!-- النموذج الرئيسي -->
    <RadzenRow Gap="2rem">
        <!-- العمود الرئيسي -->
        <RadzenColumn Size="12" SizeLG="8">
            <!-- القسم الأول: البيانات الأساسية -->
            <RadzenCard class="form-section-card">
                <RadzenStack Gap="1.5rem">
                    <!-- رأس القسم -->
                    <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="1rem">
                        <RadzenIcon Icon="info" Style="font-size: 32px; color: #667eea;" />
                        <RadzenStack Gap="0.25rem">
                            <RadzenText TextStyle="TextStyle.H5" Style="margin: 0; color: #333;">
                                البيانات الأساسية
                            </RadzenText>
                            <RadzenText TextStyle="TextStyle.Caption" Style="margin: 0; color: #666;">
                                أدخل المعلومات الأساسية للسنة المالية
                            </RadzenText>
                        </RadzenStack>
                    </RadzenStack>

                    <RadzenSeparator />

                    <!-- حقول البيانات الأساسية -->
                    <RadzenRow Gap="1rem">
                        <RadzenColumn Size="12" SizeMD="6">
                            <RadzenStack Gap="0.5rem">
                                <RadzenLabel Text="اسم السنة المالية" Style="font-weight: 600;" />
                                <RadzenNumeric @bind-Value="@yearName" 
                                              Placeholder="مثال: 2024"
                                              Min="1900" 
                                              Max="2100"
                                              Style="width: 100%;" />
                                <RadzenText TextStyle="TextStyle.Caption" Style="color: #6c757d;">
                                    أدخل السنة بالأرقام (مثال: 2024)
                                </RadzenText>
                            </RadzenStack>
                        </RadzenColumn>

                        <RadzenColumn Size="12" SizeMD="6">
                            <RadzenStack Gap="0.5rem">
                                <RadzenLabel Text="حالة السنة المالية" Style="font-weight: 600;" />
                                <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="1rem">
                                    <RadzenSwitch @bind-Value="@isActive" />
                                    <RadzenBadge BadgeStyle="@(isActive ? BadgeStyle.Success : BadgeStyle.Secondary)" 
                                                Text="@(isActive ? "نشطة" : "غير نشطة")" />
                                </RadzenStack>
                                <RadzenText TextStyle="TextStyle.Caption" Style="color: #6c757d;">
                                    يمكن أن تكون سنة واحدة فقط نشطة
                                </RadzenText>
                            </RadzenStack>
                        </RadzenColumn>
                    </RadzenRow>
                </RadzenStack>
            </RadzenCard>

            <!-- القسم الثاني: التواريخ -->
            <RadzenCard class="form-section-card">
                <RadzenStack Gap="1.5rem">
                    <!-- رأس القسم -->
                    <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="1rem">
                        <RadzenIcon Icon="date_range" Style="font-size: 32px; color: #667eea;" />
                        <RadzenStack Gap="0.25rem">
                            <RadzenText TextStyle="TextStyle.H5" Style="margin: 0; color: #333;">
                                فترة السنة المالية
                            </RadzenText>
                            <RadzenText TextStyle="TextStyle.Caption" Style="margin: 0; color: #666;">
                                حدد تاريخ بداية ونهاية السنة المالية
                            </RadzenText>
                        </RadzenStack>
                    </RadzenStack>

                    <RadzenSeparator />

                    <!-- حقول التواريخ -->
                    <RadzenRow Gap="1rem">
                        <RadzenColumn Size="12" SizeMD="6">
                            <RadzenStack Gap="0.5rem">
                                <RadzenLabel Text="تاريخ بداية السنة المالية" Style="font-weight: 600;" />
                                <RadzenDatePicker @bind-Value="@fromDate" 
                                                 DateFormat="dd/MM/yyyy"
                                                 Style="width: 100%;" />
                            </RadzenStack>
                        </RadzenColumn>

                        <RadzenColumn Size="12" SizeMD="6">
                            <RadzenStack Gap="0.5rem">
                                <RadzenLabel Text="تاريخ نهاية السنة المالية" Style="font-weight: 600;" />
                                <RadzenDatePicker @bind-Value="@toDate" 
                                                 DateFormat="dd/MM/yyyy"
                                                 Style="width: 100%;" />
                            </RadzenStack>
                        </RadzenColumn>
                    </RadzenRow>

                    <!-- معاينة التواريخ -->
                    <RadzenCard class="date-preview-card">
                        <RadzenStack Gap="1rem">
                            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0.5rem">
                                <RadzenIcon Icon="visibility" Style="color: #667eea;" />
                                <RadzenText TextStyle="TextStyle.H6" Style="margin: 0; color: #333;">
                                    معاينة فترة السنة المالية
                                </RadzenText>
                            </RadzenStack>

                            <RadzenRow AlignItems="AlignItems.Center">
                                <RadzenColumn Size="4">
                                    <RadzenCard class="date-item-card">
                                        <RadzenStack AlignItems="AlignItems.Center" Gap="0.5rem">
                                            <RadzenText TextStyle="TextStyle.Caption" Style="color: #666; margin: 0;">من</RadzenText>
                                            <RadzenText TextStyle="TextStyle.H6" Style="margin: 0; color: #333;">
                                                @(fromDate?.ToString("dd/MM/yyyy") ?? "غير محدد")
                                            </RadzenText>
                                        </RadzenStack>
                                    </RadzenCard>
                                </RadzenColumn>

                                <RadzenColumn Size="4">
                                    <RadzenStack AlignItems="AlignItems.Center">
                                        <RadzenIcon Icon="arrow_forward" Style="font-size: 32px; color: #667eea;" />
                                    </RadzenStack>
                                </RadzenColumn>

                                <RadzenColumn Size="4">
                                    <RadzenCard class="date-item-card">
                                        <RadzenStack AlignItems="AlignItems.Center" Gap="0.5rem">
                                            <RadzenText TextStyle="TextStyle.Caption" Style="color: #666; margin: 0;">إلى</RadzenText>
                                            <RadzenText TextStyle="TextStyle.H6" Style="margin: 0; color: #333;">
                                                @(toDate?.ToString("dd/MM/yyyy") ?? "غير محدد")
                                            </RadzenText>
                                        </RadzenStack>
                                    </RadzenCard>
                                </RadzenColumn>
                            </RadzenRow>

                            <RadzenRow>
                                <RadzenColumn Size="6">
                                    <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0.5rem">
                                        <RadzenIcon Icon="schedule" Style="color: #28a745;" />
                                        <RadzenText TextStyle="TextStyle.Body2" Style="margin: 0;">
                                            @GetDaysCount() يوم
                                        </RadzenText>
                                    </RadzenStack>
                                </RadzenColumn>
                                <RadzenColumn Size="6">
                                    <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0.5rem">
                                        <RadzenIcon Icon="@(IsValidDateRange() ? "check_circle" : "error")" 
                                                   />
                                        <RadzenText TextStyle="TextStyle.Body2" 
                                                  >
                                            @(IsValidDateRange() ? "التواريخ صحيحة" : "التواريخ غير صحيحة")
                                        </RadzenText>
                                    </RadzenStack>
                                </RadzenColumn>
                            </RadzenRow>
                        </RadzenStack>
                    </RadzenCard>
                </RadzenStack>
            </RadzenCard>

            <!-- القسم الثالث: معلومات إضافية -->
            <RadzenCard class="form-section-card">
                <RadzenStack Gap="1.5rem">
                    <!-- رأس القسم -->
                    <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="1rem">
                        <RadzenIcon Icon="analytics" Style="font-size: 32px; color: #667eea;" />
                        <RadzenStack Gap="0.25rem">
                            <RadzenText TextStyle="TextStyle.H5" Style="margin: 0; color: #333;">
                                معلومات إضافية
                            </RadzenText>
                            <RadzenText TextStyle="TextStyle.Caption" Style="margin: 0; color: #666;">
                                تفاصيل ومعلومات تكميلية
                            </RadzenText>
                        </RadzenStack>
                    </RadzenStack>

                    <RadzenSeparator />

                    <!-- بطاقات المعلومات -->
                    <RadzenRow Gap="1rem">
                        <RadzenColumn Size="12" SizeMD="4">
                            <RadzenCard class="info-card">
                                <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="1rem">
                                    <RadzenIcon Icon="person" Style="font-size: 32px; color: #667eea;" />
                                    <RadzenStack Gap="0.25rem">
                                        <RadzenText TextStyle="TextStyle.Caption" Style="color: #666; margin: 0;">
                                            المستخدم المنشئ
                                        </RadzenText>
                                        <RadzenText TextStyle="TextStyle.Body1" Style="font-weight: 600; margin: 0;">
                                            أحمد محمد
                                        </RadzenText>
                                    </RadzenStack>
                                </RadzenStack>
                            </RadzenCard>
                        </RadzenColumn>

                        <RadzenColumn Size="12" SizeMD="4">
                            <RadzenCard class="info-card">
                                <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="1rem">
                                    <RadzenIcon Icon="access_time" Style="font-size: 32px; color: #667eea;" />
                                    <RadzenStack Gap="0.25rem">
                                        <RadzenText TextStyle="TextStyle.Caption" Style="color: #666; margin: 0;">
                                            تاريخ الإنشاء
                                        </RadzenText>
                                        <RadzenText TextStyle="TextStyle.Body1" Style="font-weight: 600; margin: 0;">
                                            اليوم - 14:30
                                        </RadzenText>
                                    </RadzenStack>
                                </RadzenStack>
                            </RadzenCard>
                        </RadzenColumn>

                        <RadzenColumn Size="12" SizeMD="4">
                            <RadzenCard class="info-card">
                                <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="1rem">
                                    <RadzenIcon Icon="business" Style="font-size: 32px; color: #667eea;" />
                                    <RadzenStack Gap="0.25rem">
                                        <RadzenText TextStyle="TextStyle.Caption" Style="color: #666; margin: 0;">
                                            الشركة
                                        </RadzenText>
                                        <RadzenText TextStyle="TextStyle.Body1" Style="font-weight: 600; margin: 0;">
                                            شركة النظام
                                        </RadzenText>
                                    </RadzenStack>
                                </RadzenStack>
                            </RadzenCard>
                        </RadzenColumn>
                    </RadzenRow>
                </RadzenStack>
            </RadzenCard>

            <!-- التنبيهات -->
            <RadzenStack Gap="1rem">
                <RadzenAlert AlertStyle="AlertStyle.Success" 
                            Variant="Variant.Flat" 
                            Size="AlertSize.Medium"
                            Shade="Shade.Light">
                    <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="1rem">
                        <RadzenIcon Icon="check_circle" Style="font-size: 24px;" />
                        <RadzenStack Gap="0.25rem">
                            <RadzenText TextStyle="TextStyle.Body1" Style="font-weight: 600; margin: 0;">
                                البيانات صحيحة
                            </RadzenText>
                            <RadzenText TextStyle="TextStyle.Body2" Style="margin: 0;">
                                جميع البيانات المدخلة صحيحة ويمكن حفظها
                            </RadzenText>
                        </RadzenStack>
                    </RadzenStack>
                </RadzenAlert>

                <RadzenAlert AlertStyle="AlertStyle.Warning" 
                            Variant="Variant.Flat" 
                            Size="AlertSize.Medium"
                            Shade="Shade.Light">
                    <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="1rem">
                        <RadzenIcon Icon="warning" Style="font-size: 24px;" />
                        <RadzenStack Gap="0.25rem">
                            <RadzenText TextStyle="TextStyle.Body1" Style="font-weight: 600; margin: 0;">
                                تنبيه
                            </RadzenText>
                            <RadzenText TextStyle="TextStyle.Body2" Style="margin: 0;">
                                سيتم إلغاء تفعيل السنة المالية الحالية عند تفعيل هذه السنة
                            </RadzenText>
                        </RadzenStack>
                    </RadzenStack>
                </RadzenAlert>
            </RadzenStack>

            <!-- أزرار الإجراءات -->
            <RadzenCard class="actions-card">
                <RadzenStack Gap="1.5rem">
                    <!-- الأزرار الرئيسية -->
                    <RadzenStack Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.Center" Gap="1rem">
                        <RadzenButton Text="حفظ السنة المالية" 
                                     Icon="save" 
                                     ButtonStyle="ButtonStyle.Primary" 
                                     Size="ButtonSize.Large"
                                     Style="min-width: 200px;" />
                        <RadzenButton Text="حفظ وتفعيل" 
                                     Icon="save_alt" 
                                     ButtonStyle="ButtonStyle.Success" 
                                     Size="ButtonSize.Large"
                                     Style="min-width: 200px;" />
                    </RadzenStack>

                    <!-- الأزرار الثانوية -->
                    <RadzenStack Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.Center" Gap="0.5rem">
                        <RadzenButton Text="معاينة" 
                                     Icon="preview" 
                                     ButtonStyle="ButtonStyle.Light" 
                                     Size="ButtonSize.Medium" />
                        <RadzenButton Text="مسح النموذج" 
                                     Icon="clear" 
                                     ButtonStyle="ButtonStyle.Secondary" 
                                     Size="ButtonSize.Medium" />
                        <RadzenButton Text="إلغاء" 
                                     Icon="cancel" 
                                     ButtonStyle="ButtonStyle.Light" 
                                     Size="ButtonSize.Medium" />
                    </RadzenStack>

                    <!-- اختصارات لوحة المفاتيح -->
                    <RadzenStack Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.Center" Gap="1rem">
                        <RadzenBadge BadgeStyle="BadgeStyle.Info" Text="F8 - حفظ" />
                        <RadzenBadge BadgeStyle="BadgeStyle.Info" Text="Esc - إلغاء" />
                        <RadzenBadge BadgeStyle="BadgeStyle.Info" Text="Ctrl+S - حفظ سريع" />
                    </RadzenStack>
                </RadzenStack>
            </RadzenCard>
        </RadzenColumn>

        <!-- الشريط الجانبي للمساعدة -->
        <RadzenColumn Size="12" SizeLG="4">
            <RadzenCard class="help-card sticky-card">
                <RadzenStack Gap="1.5rem">
                    <!-- رأس المساعدة -->
                    <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="1rem">
                        <RadzenIcon Icon="help_outline" Style="font-size: 32px; color: #667eea;" />
                        <RadzenText TextStyle="TextStyle.H5" Style="margin: 0; color: #333;">
                            المساعدة والإرشادات
                        </RadzenText>
                    </RadzenStack>

                    <RadzenSeparator />

                    <!-- عناصر المساعدة -->
                    <RadzenStack Gap="1rem">
                        <RadzenCard class="help-item-card">
                            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Start" Gap="1rem">
                                <RadzenIcon Icon="lightbulb" Style="color: #ffc107; font-size: 24px;" />
                                <RadzenStack Gap="0.25rem">
                                    <RadzenText TextStyle="TextStyle.Body1" Style="font-weight: 600; margin: 0;">
                                        نصيحة
                                    </RadzenText>
                                    <RadzenText TextStyle="TextStyle.Body2" Style="margin: 0; line-height: 1.5;">
                                        يُنصح بأن تكون السنة المالية من 1 يناير إلى 31 ديسمبر
                                    </RadzenText>
                                </RadzenStack>
                            </RadzenStack>
                        </RadzenCard>

                        <RadzenCard class="help-item-card">
                            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Start" Gap="1rem">
                                <RadzenIcon Icon="info" Style="color: #17a2b8; font-size: 24px;" />
                                <RadzenStack Gap="0.25rem">
                                    <RadzenText TextStyle="TextStyle.Body1" Style="font-weight: 600; margin: 0;">
                                        معلومة
                                    </RadzenText>
                                    <RadzenText TextStyle="TextStyle.Body2" Style="margin: 0; line-height: 1.5;">
                                        يمكن أن تكون سنة مالية واحدة فقط نشطة في نفس الوقت
                                    </RadzenText>
                                </RadzenStack>
                            </RadzenStack>
                        </RadzenCard>

                        <RadzenCard class="help-item-card">
                            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Start" Gap="1rem">
                                <RadzenIcon Icon="keyboard" Style="color: #6f42c1; font-size: 24px;" />
                                <RadzenStack Gap="0.25rem">
                                    <RadzenText TextStyle="TextStyle.Body1" Style="font-weight: 600; margin: 0;">
                                        اختصارات لوحة المفاتيح
                                    </RadzenText>
                                    <RadzenStack Gap="0.25rem">
                                        <RadzenText TextStyle="TextStyle.Body2" Style="margin: 0;">
                                            F8 - حفظ النموذج
                                        </RadzenText>
                                        <RadzenText TextStyle="TextStyle.Body2" Style="margin: 0;">
                                            Esc - إلغاء والعودة
                                        </RadzenText>
                                        <RadzenText TextStyle="TextStyle.Body2" Style="margin: 0;">
                                            Ctrl+S - حفظ سريع
                                        </RadzenText>
                                    </RadzenStack>
                                </RadzenStack>
                            </RadzenStack>
                        </RadzenCard>
                    </RadzenStack>

                    <!-- إحصائيات سريعة -->
                    <RadzenSeparator />
                    
                    <RadzenStack Gap="1rem">
                        <RadzenText TextStyle="TextStyle.H6" Style="margin: 0; color: #333;">
                            إحصائيات سريعة
                        </RadzenText>
                        
                        <RadzenRow Gap="0.5rem">
                            <RadzenColumn Size="6">
                                <RadzenCard class="stat-mini-card">
                                    <RadzenStack AlignItems="AlignItems.Center" Gap="0.5rem">
                                        <RadzenIcon Icon="event" Style="color: #667eea; font-size: 20px;" />
                                        <RadzenText TextStyle="TextStyle.Caption" Style="margin: 0; color: #666;">
                                            السنوات المالية
                                        </RadzenText>
                                        <RadzenText TextStyle="TextStyle.H6" Style="margin: 0; color: #333;">
                                            5
                                        </RadzenText>
                                    </RadzenStack>
                                </RadzenCard>
                            </RadzenColumn>
                            
                            <RadzenColumn Size="6">
                                <RadzenCard class="stat-mini-card">
                                    <RadzenStack AlignItems="AlignItems.Center" Gap="0.5rem">
                                        <RadzenIcon Icon="check_circle" Style="color: #28a745; font-size: 20px;" />
                                        <RadzenText TextStyle="TextStyle.Caption" Style="margin: 0; color: #666;">
                                            السنة النشطة
                                        </RadzenText>
                                        <RadzenText TextStyle="TextStyle.H6" Style="margin: 0; color: #333;">
                                            2024
                                        </RadzenText>
                                    </RadzenStack>
                                </RadzenCard>
                            </RadzenColumn>
                        </RadzenRow>
                    </RadzenStack>
                </RadzenStack>
            </RadzenCard>
        </RadzenColumn>
    </RadzenRow>
</div>

@code {
    private int yearName = 2024;
    private bool isActive = false;
    private DateTime? fromDate = new DateTime(2024, 1, 1);
    private DateTime? toDate = new DateTime(2024, 12, 31);

    private int GetDaysCount()
    {
        if (fromDate.HasValue && toDate.HasValue && IsValidDateRange())
        {
            return (toDate.Value - fromDate.Value).Days + 1;
        }
        return 0;
    }

    private bool IsValidDateRange()
    {
        return fromDate.HasValue && toDate.HasValue && fromDate.Value < toDate.Value;
    }
}

<style>
