    async void SaveSafe()
    {
       
        




        using (ContextDb.Database.BeginTransaction())
        {
            try
            {
                if (receiptsafeheader.SafeId <= 0)
                {
                    SafeError = true;
                    return;
                }
                else
                {
                    SafeError = false;
                }
                // if (receiptsafeheader.Date.Year != year.YearName)
                // {
                //     DateError = true;
                //     DateErrorMessage = "يجب ان يكون تاريخ المقبوض فى نفس العام المالى";
                //     return;
                // }
                // else
                // {
                //     DateError = false;
                // }
                if (receiptsitemToSave.Count == 0)
                {
                    ItemsCountError = true;
                    ItemCountErrorMessage = "يجب ادخال مقبوض على الاقل ";
                    return;

                }
                else
                {
                    ItemsCountError = false;
                }
                if (ordersToInsert.Count != 0)
                {
                    if (ordersToInsert.Count > 0 && ordersToInsert[0].CustomerId > 0 || ordersToInsert[0].VendorId > 0 || ordersToInsert[0].Amount > 0)
                    {
                        ItemsCountError = true;
                        ItemCountErrorMessage = "هناك مقبوض فى وضع التحرير يجب الغاءه او اضافته";
                        return;

                    }
                    else
                    {
                        ItemsCountError = false;
                    }
                }
                if (ordersToUpdate.Count != 0)
                {
                    if (ordersToUpdate.Count > 0 && ordersToUpdate[0].CustomerId > 0 || ordersToUpdate[0].VendorId > 0 || ordersToUpdate[0].Amount > 0)
                    {
                        ItemsCountError = true;
                        ItemCountErrorMessage = "هناك مقبوض فى وضع التحرير يجب الغاءه او اضافته";
                        return;

                    }
                    else
                    {
                        ItemsCountError = false;
                    }
                }
                DateTime CreateDate = DateTime.Now;
                //insert to receipts header
                int receipid = unitofwork.ReceiptSafeHeader.GetMaxId(s => s.ReceiptSafeId) + 1;
                receiptsafeheader.ReceiptSafeId = receipid;
                receiptsafeheader.UserId = UserId;
                receiptsafeheader.Year = year.Year;
                receiptsafeheader.CreateDate = CreateDate;

                ContextDb.ReceiptSafeHeader.Add(receiptsafeheader);

                //insert to receipts details


                foreach (var receipt in receiptsitemToSave)
                {
                    receipt.ReceiptSafeId = receipid;

                    receiptsSafeDetails.Add(receipt.Clone());


                }

                ContextDb.ReceiptSafeDetails.AddRange(receiptsSafeDetails);


                // insert in customer Or vendor transaction

                foreach (var item in receiptsSafeDetails)
                {

                    if (item.CustomerId > 0)
                    {
                        CustomerTransaction customertransaction = new();
                        customertransaction.CustomerId = (int)item.CustomerId;
                        customertransaction.DocumentTypeId = (int)DocumentTypesEnum.ReceiptSafe;
                        customertransaction.DocumentId = receiptsafeheader.ReceiptSafeId;
                        customertransaction.Value = item.Amount * -1;
                        customertransaction.UserId = receiptsafeheader.UserId;
                        customertransaction.Year = receiptsafeheader.Year;
                        customertransaction.TransactionDate = receiptsafeheader.Date;
                        customertransaction.CreateDate = CreateDate;

                        ContextDb.CustomerTransactions.Add(customertransaction);
                    }

                    if (item.VendorId > 0)
                    {
                        VendorTransaction vendortransaction = new();

                        vendortransaction.VendorId = (int)item.VendorId;
                        vendortransaction.DocumentTypeId = (int)DocumentTypesEnum.ReceiptSafe;
                        vendortransaction.DocumentId = receiptsafeheader.ReceiptSafeId;
                        vendortransaction.Value = item.Amount * -1;
                        vendortransaction.UserId = receiptsafeheader.UserId;
                        vendortransaction.Year = receiptsafeheader.Year;
                        vendortransaction.TransactionDate = receiptsafeheader.Date;
                        vendortransaction.CreateDate = CreateDate;

                        ContextDb.VendorTransactions.Add(vendortransaction);
                    }


                }


                // insert in safe transaction 
                safetransaction.SafeId = receiptsafeheader.SafeId;
                safetransaction.DocumentTypeId = (int)DocumentTypesEnum.ReceiptSafe;
                safetransaction.DocumentId = receiptsafeheader.ReceiptSafeId;
                safetransaction.Value = receiptsafeheader.Total;
                safetransaction.UserId = receiptsafeheader.UserId;
                safetransaction.Year = receiptsafeheader.Year;
                safetransaction.TransactionDate = receiptsafeheader.Date;
                safetransaction.CreateDate = CreateDate;
                ContextDb.SafeTransactions.Add(safetransaction);

                ContextDb.SaveChanges();
                ContextDb.Database.CommitTransaction();
                SaveBtn.Disabled = true;
                SaveSucces = true;
                SaveMessage = $"تم الحفظ بنجاح رقم المقبوض {receiptsafeheader.ReceiptSafeId} ";

                Alertstyle = AlertStyle.Success;
                Thread t1 = new Thread(new ThreadStart(Closemessage));
                t1.Start();

                CustomerIdError = false;


                AmountError = false;
                ItemsCountError = false;

            }
            catch (Exception ex)
            {

                ContextDb.Database.RollbackTransaction();
                SaveSucces = true;
                SaveMessage = $"حدث خطأ  {ex.Message} ";
                receiptsafeheader.ReceiptSafeId = 0;
                Alertstyle = AlertStyle.Danger;

            }

        }


    }


    void ChangeAmount()
    {
        if (ordersToInsert.Count > 0)
        {
            receiptsafeheader.Total = receiptsitemToSave.Sum(s => s.Amount) + ordersToInsert[0].Amount ;
        }
        if (ordersToUpdate.Count > 0)
        {
            receiptsafeheader.Total = receiptsitemToSave.Sum(s => s.Amount);
        }
    }
    void DateChange()
    {
        if (receiptsafeheader.Date.Year == year.YearName)
        {
            DateError = false;
        }
    }

    void ResetErrors()
    {

        CustomerIdError = false;


        AmountError = false;
       
        DateError = false;
        ItemsCountError = false;


        SaveSucces = false;

    }
    void Closemessage()
    {

        Thread.Sleep(5000);
        SaveSucces = false;
