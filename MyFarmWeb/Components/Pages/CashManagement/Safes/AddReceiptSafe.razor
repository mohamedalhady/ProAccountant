        ordersToUpdate.Clear();
    }

    void Reset(ReceiptSafeDetails order)
    {
        ordersToInsert.Remove(order);
        ordersToUpdate.Remove(order);
    }
    async Task DeleteRow(ReceiptSafeDetails order)
    {
        Reset(order);
        var item = receiptsitemToSave.FirstOrDefault(p => p.Moslsel == order.Moslsel);
        if (item != null)
        {
            receiptsitemToSave.Remove(order);
            await ordersGrid.Reload();
        }
        else
        {
            ordersGrid.CancelEditRow(order);
            await ordersGrid.Reload();
        }
        int c = 1;
        foreach (var i in receiptsitemToSave)
        {

            i.Moslsel = c;
            c++;
        }
        receiptsafeheader.Total = receiptsitemToSave.Sum(p => p.Amount);

        await InsertRow();

        CustomerIdError = false;


        AmountError = false;
        ItemsCountError = false;

        await jsrun.InvokeVoidAsync("addKeydownListenerItemIdFirstChild", CustomerIdControl.UniqueID, DotNetObjectReference.Create(this));
        await jsrun.InvokeVoidAsync("addKeydownListenerprice", AmountControl.UniqueID, DotNetObjectReference.Create(this));
        await jsservice.setfocusbyid(() => CustomerIdControl.UniqueID);


