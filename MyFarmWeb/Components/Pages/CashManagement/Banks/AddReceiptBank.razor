    {
        SaveBtn.Disabled = false;

        receiptbankheader = new();
        receiptsBankDetails.Clear();
        receiptsitemToSave.Clear();
        banktransaction = new();
        receiptbankheader.Date = DateTime.Now;
        if (banks != null)
        {
            //  receiptbankheader.BankId = banks.FirstOrDefault().BankId;
            // receiptbankheader.FarmId = farms.FirstOrDefault().NewFarmId;

            bankcontrol.SelectedItem = null;
            farmcontrol.SelectedItem = null;

