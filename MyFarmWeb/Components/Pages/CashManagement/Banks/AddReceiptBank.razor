    async void SaveBank()
    {

      
    
        if (receiptbankheader.BankId <= 0)
        {
            BankError = true;
            return;
        }
        else
        {
            BankError = false;
        }
        // if (receiptbankheader.Date.Year != year.YearName)
        // {
        //     DateError = true;
        //     DateErrorMessage = "يجب ان يكون تاريخ المقبوض فى نفس العام المالى";
        //     return;
        // }
        // else
        // {
        //     DateError = false;
        // }
        if (receiptsitemToSave.Count == 0)
        {
            ItemsCountError = true;
            ItemCountErrorMessage = "يجب ادخال مقبوض على الاقل ";
            return;

        }
        else
        {
            ItemsCountError = false;
        }
        if (ordersToInsert.Count != 0)
        {
            if (ordersToInsert.Count > 0 && ordersToInsert[0].CustomerId > 0 || ordersToInsert[0].VendorId > 0 || ordersToInsert[0].Amount > 0)
            {
                ItemsCountError = true;
                ItemCountErrorMessage = "هناك مقبوض فى وضع التحرير يجب الغاءه او اضافته";
                return;

            }
            else
            {
                ItemsCountError = false;
            }
        }
        if (ordersToUpdate.Count != 0)
        {
            if (ordersToUpdate.Count > 0 && ordersToUpdate[0].CustomerId > 0 || ordersToUpdate[0].VendorId > 0 || ordersToUpdate[0].Amount > 0)
            {
                ItemsCountError = true;
                ItemCountErrorMessage = "هناك مقبوض فى وضع التحرير يجب الغاءه او اضافته";
                return;

            }
            else
            {
                ItemsCountError = false;
            }
        }

        using (ContextDb.Database.BeginTransaction())
        {
            try
            {
                DateTime CreateDate = DateTime.Now;
                //insert to receipts header
                int receipid = unitofwork.ReceiptBankHeader.GetMaxId(s => s.ReceiptBankId) + 1;
                receiptbankheader.ReceiptBankId = receipid;
                receiptbankheader.UserId = UserId;
                receiptbankheader.Year = 0;
                receiptbankheader.CreateDate = CreateDate;

                ContextDb.ReceiptBankHeader.Add(receiptbankheader);

                //insert to receipts details


                foreach (var receipt in receiptsitemToSave)
                {
                    receipt.ReceiptBankId = receipid;

                    receiptsBankDetails.Add(receipt.Clone());


                }

                ContextDb.ReceiptBankDetails.AddRange(receiptsBankDetails);


                // insert in customer Or vendor transaction

                foreach (var item in receiptsBankDetails)
                {

                    if (item.CustomerId > 0)
                    {
                        CustomerTransaction customertransaction = new();
                        customertransaction.CustomerId = (int)item.CustomerId;
                        customertransaction.DocumentTypeId = (int)DocumentTypesEnum.ReceiptBank;
                        customertransaction.DocumentId = receiptbankheader.ReceiptBankId;
                        customertransaction.Value = item.Amount * -1;
                        customertransaction.UserId = receiptbankheader.UserId;
                        customertransaction.Year = receiptbankheader.Year;
                        customertransaction.TransactionDate = receiptbankheader.Date;
                        customertransaction.CreateDate = CreateDate;

                        ContextDb.CustomerTransactions.Add(customertransaction);
                    }

                    if (item.VendorId > 0)
                    {
                        VendorTransaction vendortransaction = new();

                        vendortransaction.VendorId = (int)item.VendorId;
                        vendortransaction.DocumentTypeId = (int)DocumentTypesEnum.ReceiptBank;
                        vendortransaction.DocumentId = receiptbankheader.ReceiptBankId;
                        vendortransaction.Value = item.Amount * -1;
                        vendortransaction.UserId = receiptbankheader.UserId;
                        vendortransaction.Year = receiptbankheader.Year;
                        vendortransaction.TransactionDate = receiptbankheader.Date;
                        vendortransaction.CreateDate = CreateDate;

                        ContextDb.VendorTransactions.Add(vendortransaction);
                    }


                }


                // insert in bank transaction
                banktransaction.BankId = receiptbankheader.BankId;
                banktransaction.DocumentTypeId = (int)DocumentTypesEnum.ReceiptBank;
                banktransaction.DocumentId = receiptbankheader.ReceiptBankId;
                banktransaction.Value = receiptbankheader.Total;
                banktransaction.UserId = receiptbankheader.UserId;
                banktransaction.Year = receiptbankheader.Year;
                banktransaction.TransactionDate = receiptbankheader.Date;
                banktransaction.CreateDate = CreateDate;
                ContextDb.BankTransactions.Add(banktransaction);

                ContextDb.SaveChanges();
                ContextDb.Database.CommitTransaction();
                SaveBtn.Disabled = true;
                SaveSucces = true;
                SaveMessage = $"تم الحفظ بنجاح رقم المقبوض {receiptbankheader.ReceiptBankId} ";

                Alertstyle = AlertStyle.Success;
                Thread t1 = new Thread(new ThreadStart(Closemessage));
                t1.Start();

                CustomerIdError = false;


                AmountError = false;
                ItemsCountError = false;

            }
            catch (Exception ex)
            {

                ContextDb.Database.RollbackTransaction();
                SaveSucces = true;
                SaveMessage = $"حدث خطأ  {ex.Message} ";
                receiptbankheader.ReceiptBankId = 0;
                Alertstyle = AlertStyle.Danger;

            }

        }


    }


    void ChangeAmount()
    {
        if (ordersToInsert.Count > 0)
        {
            receiptbankheader.Total = receiptsitemToSave.Sum(s => s.Amount) + ordersToInsert[0].Amount;
        }
        if (ordersToUpdate.Count > 0)
        {
            receiptbankheader.Total = receiptsitemToSave.Sum(s => s.Amount);
        }
    }
    void DateChange()
    {
        if (receiptbankheader.Date.Year == year.YearName)
        {
            DateError = false;
        }
    }

    void ResetErrors()
    {

        CustomerIdError = false;


        AmountError = false;

        DateError = false;
        ItemsCountError = false;


        SaveSucces = false;

    }
    void Closemessage()
    {

        Thread.Sleep(5000);
        SaveSucces = false;
        ResetErrors();
        InvokeAsync(() => this.StateHasChanged());

    }
