<script>
    function toggleSidebar() {
        const sidebar = document.querySelector('.sidebar-fixed');
        const overlay = document.getElementById('mobileOverlay');

        if (window.innerWidth <= 768) {
            sidebar.classList.toggle('show');
            overlay.classList.toggle('show');
        }
    }

    // إغلاق الـ sidebar عند تغيير حجم الشاشة
    window.addEventListener('resize', function() {
        if (window.innerWidth > 768) {
            const sidebar = document.querySelector('.sidebar-fixed');
            const overlay = document.getElementById('mobileOverlay');
            // sidebar.classList.remove('show');
            // overlay.classList.remove('show');
        }
    });

    window.updateBodyPadding = (isCollapsed) => {
        if (isCollapsed) {
            document.body.classList.add('sidebar-collapsed');
        } else {
            document.body.classList.remove('sidebar-collapsed');
        }
    };

    // مؤشر التمرير الأفقي
    document.addEventListener('DOMContentLoaded', function() {
        const contentWrapper = document.getElementById('contentWrapper');
        const scrollIndicator = document.getElementById('scrollIndicator');
        let scrollTimeout;

        if (contentWrapper && scrollIndicator) {
            contentWrapper.addEventListener('scroll', function() {
                // إظهار المؤشر عند التمرير الأفقي
                if (contentWrapper.scrollLeft > 0) {
                    scrollIndicator.classList.add('show');

                    // إخفاء المؤشر بعد توقف التمرير
                    clearTimeout(scrollTimeout);
                    scrollTimeout = setTimeout(() => {
                        scrollIndicator.classList.remove('show');
                    }, 2000);
                } else {
                    scrollIndicator.classList.remove('show');
                }
            });

            // فحص إمكانية التمرير الأفقي عند تحميل الصفحة
            function checkHorizontalScroll() {
                if (contentWrapper.scrollWidth > contentWrapper.clientWidth) {
                    // يمكن التمرير أفقياً
                    contentWrapper.style.cursor = 'grab';
                } else {
                    contentWrapper.style.cursor = 'default';
                }
            }

            // فحص عند تحميل الصفحة وتغيير حجم النافذة
            checkHorizontalScroll();
            window.addEventListener('resize', checkHorizontalScroll);

            // مراقبة تغييرات المحتوى
            const observer = new MutationObserver(checkHorizontalScroll);
            observer.observe(contentWrapper, {
                childList: true,
                subtree: true,
                attributes: true
            });
        }
    });

    // دالة لإضافة فئة للمحتوى العريض
    window.setContentWidth = (width) => {
        const pageContent = document.querySelector('.page-content');
        if (pageContent) {
            pageContent.classList.remove('wide-content', 'extra-wide-content');
            if (width === 'wide') {
                pageContent.classList.add('wide-content');
            } else if (width === 'extra-wide') {
                pageContent.classList.add('extra-wide-content');
            }
        }
    };
</script>
